{
  "name": "romper-electron-runtime",
  "private": true,
  "main": "dist/main/index.js",
  "type": "module",
  "dependencies": {
    "@romper/shared": "file:../shared",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "better-sqlite3": "^11.10.0",
    "electron": "^36.4.0",
    "play-sound": "^1.1.6",
    "prebuildify": "^6.0.1",
    "unzipper": "^0.12.3",
    "wavesurfer.js": "^7.9.5"
  },
  "scripts": {
    "start": "electron .",
    "build:preload": "tsc -p preload/tsconfig.preload.json",
    "build:main": "tsc -p tsconfig.json",
    "build": "npm run build:main && npm run build:preload",
    "electron:dev": "cross-env NODE_PATH=$(pwd)/node_modules NODE_ENV=development electron --inspect=5858 .",
    "rebuild:electron": "npx electron-rebuild -f -w better-sqlite3",
    "make": "electron-forge make -- --arch=universal",
    "lint": "eslint . --fix",
    "test": "node run-vitest-in-electron.cjs --coverage",
    "clean": "rm -fr dist && rm -fr out"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@vitest/coverage-v8": "^3.2.3",
    "cross-env": "^7.0.3",
    "eslint": "^9.29.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.8.3",
    "vite-plugin-static-copy": "^3.0.2",
    "vitest": "^3.2.3"
  }
}

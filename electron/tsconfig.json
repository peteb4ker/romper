{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@romper/shared/*": ["../shared/*"]
    }
  },
  "include": ["main/**/*", "preload/**/*", "types/**/*", "../shared/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "../app/shared/__tests__",
    "../shared/vitest.config.ts",
    "../shared/vite.config.ts",
    "../shared/__tests__",
    "../shared/coverage"
  ]
}

{
    "name": "romper",
    "productName": "Romper",
    "version": "0.1.0",
    "main": "dist/main/index.js",
    "type": "module",
    "scripts": {
        "dev": "npm run build && npm run build:preload && npm run build:main && vite dev",
        "build": "vite build",
        "build:preload": "tsc -p tsconfig.preload.json",
        "build:main": "tsc",
        "electron:dev": "NODE_ENV=development electron --inspect=5858 .",
        "package": "electron-builder",
        "test": "vitest --coverage",
        "test:ui": "vitest --ui --coverage",
        "make": "electron-forge make -- --arch=universal",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
        "clean": "rm -fr dist && rm -fr out"
    },
    "dependencies": {
        "history": "^5.3.0",
        "play-sound": "^1.1.6",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-dropzone": "^14.3.8",
        "react-icons": "^5.5.0",
        "react-router-dom": "^7.6.0",
        "sonner": "^2.0.5",
        "wavesurfer.js": "^7.9.5"
    },
    "devDependencies": {
        "@electron-forge/cli": "^7.8.1",
        "@electron-forge/maker-dmg": "^7.8.1",
        "@electron-forge/maker-zip": "^7.8.1",
        "@testing-library/jest-dom": "^6.0.0",
        "@testing-library/react": "^14.0.0",
        "@types/play-sound": "^1.1.2",
        "@types/react": "^19.1.4",
        "@types/react-dom": "^19.1.5",
        "@types/react-dropzone": "^4.2.2",
        "@types/testing-library__jest-dom": "^5.14.9",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "@vitejs/plugin-react": "^4.0.0",
        "@vitest/coverage-v8": "^3.1.4",
        "@vitest/ui": "^3.1.4",
        "autoprefixer": "^10.4.21",
        "electron": "^36.2.1",
        "electron-builder": "^24.0.0",
        "electron-devtools-installer": "^4.0.0",
        "eslint": "^9.27.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.4.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "globals": "^16.1.0",
        "jsdom": "^26.1.0",
        "postcss": "^8.5.3",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.2.0",
        "typescript-eslint": "^8.32.1",
        "vite": "^6.3.5",
        "vite-plugin-static-copy": "^3.0.0",
        "vitest": "^3.1.4"
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "icon": "dist/resources/app-icon",
                "extraResource": [
                    "dist/resources/app-icon.icns"
                ]
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-dmg",
                    "config": {
                        "format": "ULFO",
                        "icon": "dist/resources/app-icon.icns"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                }
            ]
        }
    }
}

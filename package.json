{
    "name": "romper-monorepo",
    "private": true,
    "version": "0.1.0",
    "scripts": {
        "build": "tsc --project tsconfig.json",
        "test": "npm run test:unit && npm run test:integration",
        "test:unit": "vitest --config vite.config.ts --run",
        "test:integration": "node electron/run-vitest-in-electron.cjs electron/main/db/__tests__/integration/*.test.ts",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
        "dev": "npm run build && concurrently \"vite dev --config vite.config.ts\" \"sleep 3 && npm run electron:dev\"",
        "postinstall": "npx electron-rebuild -f -w better-sqlite3"
    },
    "devDependencies": {
        "@electron/rebuild": "^4.0.1",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@vitest/coverage-v8": "^3.2.3",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.1.2",
        "cross-env": "^7.0.3",
        "eslint": "^9.0.0",
        "tailwindcss": "^4.1.8",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vitest": "^3.2.3"
    },
    "overrides": {
        "eslint": "^9.0.0"
    },
    "dependencies": {
        "@tailwindcss/vite": "^4.1.10",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "@vitejs/plugin-react": "^4.5.2",
        "better-sqlite3": "^11.10.0",
        "electron": "^36.4.0",
        "play-sound": "^1.1.6",
        "prebuildify": "^6.0.1",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-dropzone": "^14.3.8",
        "react-icons": "^5.5.0",
        "react-router-dom": "^7.6.2",
        "react-window": "^1.8.11",
        "sonner": "^2.0.5",
        "unzipper": "^0.12.3",
        "wavesurfer.js": "^7.9.5"
    }
}

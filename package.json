{
  "name": "romper",
  "private": true,
  "version": "0.9.0",
  "type": "module",
  "main": "dist/electron/main/index.js",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "vite build --config vite.main.config.ts",
    "build:preload": "tsc -p electron/preload/tsconfig.preload.json && mv dist/electron/preload/index.js dist/electron/preload/index.cjs",
    "build:renderer": "vite build --config vite.config.ts",
    "make": "npm run build && electron-forge make",
    "package": "npm run build && electron-forge package",
    "publish": "npm run build && electron-forge publish",
    "test": "bash -c 'npm run test:unit; u=$?; npm run test:integration; i=$?; npm run coverage:merge; npm run coverage:total; exit $(( u || i ))'",
    "test:unit": "npx vitest --config vite.config.ts --run --silent --reporter=dot",
    "test:integration": "node electron/run-vitest-in-electron.cjs --run --silent --reporter=dot",
    "test:e2e": "npm run build && npm run test:play",
    "test:play": "playwright test",
    "coverage:merge": "npm run coverage:merge:json && npm run coverage:merge:lcov",
    "coverage:merge:json": "mkdir -p coverage/merged && istanbul-merge --out coverage/coverage-final.json coverage/unit/coverage-final.json coverage/integration/coverage-final.json",
    "coverage:merge:lcov": "mkdir -p coverage/merged && lcov -q -a coverage/unit/lcov.info -a coverage/integration/lcov.info --output-file coverage/merged/lcov.info",
    "coverage:total": "nyc report --temp-dir=coverage/merged --reporter=text-summary",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
    "dev": "npm run build && concurrently \"vite dev --config vite.config.ts\" \"sleep 2 && npm run electron:dev\"",
    "electron:dev": "NODE_ENV=development electron --inspect=5858 dist/electron/main/index.js",
    "postinstall": "npx electron-rebuild -f -w better-sqlite3",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "typecheck": "tsc --noEmit",
    "check-test-coverage": "node scripts/check-test-coverage.js",
    "pre-commit": "npm run typecheck && npm run lint:check && npm run test:husky && npm run build",
    "test:husky": "npm run test:unit:husky && npm run test:integration:husky",
    "test:unit:husky": "NO_COLOR=true npm run test:unit",
    "test:integration:husky": "NO_COLOR=true npm run test:integration",
    "prepare": "husky",
    "list-large-files": "find . -type f \\( -name '*.ts' -o -name '*.tsx' \\) ! -path '*/node_modules/*' ! -path '*/__tests__/*' ! -name '*.test.ts' ! -name '*.test.tsx' -exec sh -c 'wc -l \"$1\" | awk \"{if (\\$1 > 400) print \\$0}\"' _ {} \\;",
    "mcp:server": "node scripts/start-mcp-server.js",
    "mcp:server:headless": "node scripts/start-mcp-server.js --headless",
    "mcp:test": "node scripts/test-mcp-connection.js",
    "mcp:setup": "npm run mcp:test",
    "worktree:create": "node scripts/worktree-create.js",
    "worktree:list": "git worktree list",
    "worktree:remove": "node scripts/worktree-remove.js",
    "worktree:current": "node scripts/worktree-current.js",
    "commit": "node scripts/enhanced-commit.js"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-dmg": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron/rebuild": "^4.0.1",
    "@playwright/mcp": "^0.0.32",
    "@playwright/test": "^1.53.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/archiver": "^6.0.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.0.3",
    "@types/node-wav": "^0.0.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-window": "^1.8.8",
    "@types/tar": "^6.1.13",
    "@vitest/coverage-v8": "^3.2.3",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-sonarjs": "^3.0.4",
    "husky": "^9.1.7",
    "istanbul-merge": "^2.0.0",
    "jsdom": "^26.1.0",
    "lcov": "^1.16.0",
    "lint-staged": "^16.1.2",
    "nyc": "^17.1.0",
    "playwright": "^1.53.0",
    "rollup": "^4.43.0",
    "semantic-release": "^24.2.7",
    "sonarqube-scanner": "^4.3.0",
    "tailwindcss": "^4.1.8",
    "tar": "^7.4.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.3",
    "electron": "^36.4.0"
  },
  "overrides": {
    "eslint": "^9.0.0"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.10",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.5.2",
    "better-sqlite3": "^11.10.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.3",
    "lightningcss": "^1.30.1",
    "node-wav": "^0.0.2",
    "play-sound": "^1.1.6",
    "prebuildify": "^6.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.2",
    "react-window": "^1.8.11",
    "sonner": "^2.0.5",
    "unzipper": "^0.12.3",
    "wavesurfer.js": "^7.9.5"
  }
}

{
    "name": "romper-monorepo",
    "private": true,
    "version": "0.1.0",
    "workspaces": [
        "shared",
        "app",
        "electron"
    ],
    "scripts": {
        "bootstrap": "npm install --workspaces --legacy-peer-deps",
        "build": "npm run build --workspaces",
        "test": "npm run test --workspaces",
        "lint": "npm run lint --workspaces",
        "dev": "npm run build && concurrently \"npm run dev --workspace=app\" \"sleep 3 && cd electron && npm run electron:dev \"",
        "postinstall": "npx electron-rebuild -f -w better-sqlite3"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.1.2",
        "cross-env": "^7.0.3",
        "eslint": "^9.0.0",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vitest": "^3.2.3",
        "@vitest/coverage-v8": "^3.2.3",
        "tailwindcss": "^4.1.8"
    },
    "overrides": {
        "eslint": "^9.0.0"
    },
    "dependencies": {
        "workspaces": "^0.1.0"
    }
}

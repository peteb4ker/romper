{
  "name": "romper",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "dist/electron/main/index.js",
  "scripts": {
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "vite build --config vite.main.config.ts",
    "build:preload": "tsc -p electron/preload/tsconfig.preload.json && mv dist/electron/preload/index.js dist/electron/preload/index.cjs",
    "build:renderer": "vite build --config vite.config.ts",
    "test": "bash -c 'npm run test:unit; u=$?; npm run test:integration; i=$?; npm run coverage:merge; npm run coverage:total; exit $(( u || i ))'",
    "test:unit": "npx vitest --config vite.config.ts --run --silent --reporter=dot",
    "test:integration": "node electron/run-vitest-in-electron.cjs --run --silent --reporter=dot",
    "test:e2e": "npm run build && npm run test:play",
    "test:play": "playwright test",
    "coverage:merge": "istanbul-merge --out coverage/coverage-final.json coverage/unit/coverage-final.json coverage/integration/coverage-final.json",
    "coverage:total": "npx nyc report --temp-dir=coverage --reporter=text-summary",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
    "dev": "npm run build && concurrently \"vite dev --config vite.config.ts\" \"sleep 2 && npm run electron:dev\"",
    "electron:dev": "NODE_ENV=development electron --inspect=5858 dist/electron/main/index.js",
    "postinstall": "npx electron-rebuild -f -w better-sqlite3",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "typecheck": "tsc --noEmit",
    "pre-commit": "npm run typecheck && npm run lint:check && npm run test:husky && npm run build",
    "test:husky": "npm run test:unit:husky && npm run test:integration:husky",
    "test:unit:husky": "NO_COLOR=true npm run test:unit",
    "test:integration:husky": "NO_COLOR=true npm run test:integration",
    "prepare": "husky"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.1",
    "@playwright/test": "^1.53.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.0.3",
    "@types/node-wav": "^0.0.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-window": "^1.8.8",
    "@vitest/coverage-v8": "^3.2.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "playwright": "^1.53.0",
    "rollup": "^4.43.0",
    "tailwindcss": "^4.1.8",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.3"
  },
  "overrides": {
    "eslint": "^9.0.0"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.10",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.5.2",
    "better-sqlite3": "^11.10.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.3",
    "electron": "^36.4.0",
    "istanbul-merge": "^2.0.0",
    "lightningcss": "^1.30.1",
    "node-wav": "^0.0.2",
    "play-sound": "^1.1.6",
    "prebuildify": "^6.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-dropzone": "^14.3.8",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.2",
    "react-window": "^1.8.11",
    "sonner": "^2.0.5",
    "unzipper": "^0.12.3",
    "wavesurfer.js": "^7.9.5"
  }
}

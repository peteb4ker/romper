{
    "name": "romper",
    "productName": "Romper",
    "version": "0.1.0",
    "main": "dist/main/index.js",
    "type": "module",
    "scripts": {
        "dev": "npm run build && npm run build:preload && npm run build:main && vite dev",
        "build": "vite build",
        "build:preload": "tsc -p tsconfig.preload.json",
        "build:main": "tsc",
        "electron:dev": "NODE_ENV=development electron --inspect=5858 .",
        "package": "electron-builder",
        "test": "vitest --coverage",
        "test:ui": "vitest --ui --coverage",
        "make": "electron-forge make -- --arch=universal",
        "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
        "clean": "rm -fr dist && rm -fr out",
        "dev:all": "npm run build && npm run build:preload && npm run build:main && concurrently \"vite dev\" \"sleep 3 && npm run electron:dev\""
    },
    "dependencies": {
        "@tailwindcss/vite": "^4.1.8",
        "history": "^5.3.0",
        "play-sound": "^1.1.6",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-dropzone": "^14.3.8",
        "react-icons": "^5.5.0",
        "react-router-dom": "^7.6.2",
        "react-window": "^1.8.11",
        "sonner": "^2.0.5",
        "tailwindcss": "^4.1.8",
        "wavesurfer.js": "^7.9.5"
    },
    "devDependencies": {
        "@electron-forge/cli": "^7.8.1",
        "@electron-forge/maker-dmg": "^7.8.1",
        "@electron-forge/maker-zip": "^7.8.1",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.3.0",
        "@types/play-sound": "^1.1.2",
        "@types/react": "^19.1.6",
        "@types/react-dom": "^19.1.6",
        "@types/react-dropzone": "^5.1.0",
        "@typescript-eslint/eslint-plugin": "^8.33.1",
        "@typescript-eslint/parser": "^8.33.1",
        "@vitejs/plugin-react": "^4.5.1",
        "@vitest/coverage-v8": "^3.2.2",
        "@vitest/ui": "^3.2.2",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.1.2",
        "electron": "^36.4.0",
        "electron-builder": "^26.0.12",
        "electron-devtools-installer": "^4.0.0",
        "eslint": "^9.28.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.4.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^16.2.0",
        "jsdom": "^26.1.0",
        "postcss": "^8.5.4",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.33.1",
        "vite": "^6.3.5",
        "vite-plugin-static-copy": "^3.0.0",
        "vitest": "^3.2.2"
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "icon": "dist/resources/app-icon",
                "extraResource": [
                    "dist/resources/app-icon.icns"
                ]
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-dmg",
                    "config": {
                        "format": "ULFO",
                        "icon": "dist/resources/app-icon.icns"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                }
            ]
        }
    }
}

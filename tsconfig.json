{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "moduleResolution": "node",
        "strict": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./app/types",
            "./electron/types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "app/**/*",
        "electron/**/*",
        "shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "out"
    ]
}
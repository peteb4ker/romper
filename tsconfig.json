{
    "compilerOptions": {
        "outDir": "dist", // Output directory for the main process
        "rootDir": "src", // Restrict build to the main entry point
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "moduleResolution": "node",
        "strict": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src/main/**/*",
        "src/preload/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "out"
    ]
}
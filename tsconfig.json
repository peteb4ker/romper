{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "outDir": "dist",
        "rootDir": ".",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@romper/app/*": [
                "app/*"
            ],
            "@romper/electron/*": [
                "electron/*"
            ],
            "@romper/shared/*": [
                "shared/*"
            ]
        },
        "jsx": "react-jsx",
        "types": [
            "node",
            "react",
            "react-dom"
        ]
    },
    "include": [
        "app/**/*",
        "electron/**/*",
        "shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "coverage",
        "**/__tests__/**",
        "**/__e2e__/**",
        "electron/preload"
    ]
}
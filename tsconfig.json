{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "moduleResolution": "node",
        "strict": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./src/types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/main/**/*",
        "src/renderer/electron.d.ts",
        "src/shared/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "out"
    ]
}
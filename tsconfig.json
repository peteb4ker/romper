{
    "compilerOptions": {
        "outDir": "dist/main",
        "rootDir": "src/main",
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "moduleResolution": "node",
        "strict": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src/main/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "out",
        "src/renderer"
    ]
}